@using MedioClinic.Models.Menu;
@model IEnumerable<NavigationItemViewModel>

<nav class="white" role="navigation">
    <div class="nav-wrapper container">
        <a id="logo-container" href="index.html" class="brand-logo">
            <img class="kn-logo" src="assets/Logo/Logoic.png">
            <strong>Medio</strong>Clinic
        </a>
        <!-- Languages selector -->
        <ul id="langs" class="dropdown-content">
            <li>
                <a href="#">EN</a>
            </li>
            <li>
                <a href="#">ESP</a>
            </li>
        </ul>
        <ul class="right hide-on-med-and-down">
            @foreach (NavigationItemViewModel menuItem in Model)
            {
                <li>
                    <a href="@menuItem.MenuItemRelativeUrl">@menuItem.MenuItemText</a>
                </li>
            }
            <li>
                <a class="dropdown-trigger" href="#" data-target="langs">
                    EN
                    <i class="fas fa-globe-africa right"></i>
                </a>
            </li>
        </ul>
        <ul id="nav-mobile" class="sidenav">
            @foreach (NavigationItemViewModel menuItem in Model)
            {
                if (menuItem.MenuItemText == "Home")
                {
                    <li class="kn-bold">
                        <a href="@menuItem.MenuItemRelativeUrl">@menuItem.MenuItemText</a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@menuItem.MenuItemRelativeUrl">@menuItem.MenuItemText</a>
                    </li>
                }
                
            }
        </ul>
        <a href="#" data-target="nav-mobile" class="sidenav-trigger">
            <i class="material-icons">menu</i>
        </a>
    </div>
</nav>